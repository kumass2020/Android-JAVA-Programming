<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_weight="1">

        <EditText
            android:layout_span="5"
            android:hint="숫자1 입력" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <EditText
            android:layout_span="5"
            android:hint="숫자2 입력" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:text="0" />

        <Button
            android:text="1" />

        <Button
            android:text="2" />

        <Button
            android:text="3" />

        <Button
            android:text="4" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:text="5" />

        <Button
            android:text="6" />

        <Button
            android:text="7" />

        <Button
            android:text="8" />

        <Button
            android:text="9" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:layout_span="5"
            android:text="더하기" />

    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_span="5"
            android:text="빼기" />
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:layout_span="5"
            android:text="곱하기" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:layout_span="5"
            android:text="나누기" />

    </TableRow>

    <TableRow
        android:layout_weight="1">

        <TextView
            android:layout_span="5"
            android:textColor="#FF0000"
            android:text="계산 결과 : " />
    </TableRow>




</TableLayout>